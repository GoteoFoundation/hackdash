{{#if isAdmin}}

  <h1>
    <a id="dashboard-title">{{title}}</a>
  </h1>

  <p>
    <a id="dashboard-description">{{description}}</a>
  </p>

  <p>
    <a id="dashboard-link">{{link}}</a>
    {{#if link}}
    <a href="{{link}}" target="_blank" data-bypass>
      <i class="fa fa-external-link"></i>
    </a>
    {{/if}}
  </p>

{{else}}

  {{#if title}}
  <h1>{{title}}</h1>
  {{/if}}

  {{#if description}}
  <p>{{description}}</p>
  {{/if}}

  {{#if link}}
  <a href="{{link}}" target="_blank" data-bypass>{{link}}</a>
  {{/if}}

{{/if}}
