
<div class="footer-dash-ctn{{#unless adminOpened}} hidden{{/unless}}">

  {{#if isDashboard}}

  <div class="footer-toggle-ctn">

    <a href="/api/v2/dashboards/{{domain}}/csv" target="_blank" data-bypass>
      <i class="fa fa-download"></i>
      <div>{{__ "Export .CSV File"}}</div>
    </a>

    <a class="btn-admin-forms" href="/dashboards/{{domain}}/forms">
      <i class="fa fa-file-text-o"></i><div>Admin forms</div>
    </a>

    <a data-placement="top" data-original-title="{{privateMsg}}"
      class="tooltips dashboard-private {{#if private}}dash-private{{else}}dash-public{{/if}}">
      <i class="txt {{#if private}}btn-danger{{else}}btn-success{{/if}}">{{#if private}}Private{{else}}Public{{/if}}</i>
      <div>Visibility</div>
    </a>

    <div class="box"><label>Active statuses</label>
      <select class="active-statuses" multiple>
      {{#each statuses}}
        <option value="{{status}}"{{selected active true}}>{{text}}</option>
      {{/each}}
      </select>
    </div>

  </div>

  {{/if}}

  {{#if isCollection}}
      <a class="btn-admin-forms" href="/collections/{{_id}}/forms">
        <i class="fa fa-file-text-o"></i><div>Admin forms</div>
      </a>
  {{/if}}

</div>

{{#if isDashboard}}

  <a data-placement="top" data-original-title="{{switcherMsg}}"
    class="tooltips dashboard-btn footer-toggle-ctn {{#if open}}dash-open{{else}}dash-close{{/if}}">
    <i class="txt {{#if open}}btn-success{{else}}btn-danger{{/if}}">{{#if open}}Open{{else}}Close{{/if}}</i>
    <div>{{__ "Dashboard Status"}}</div>
  </a>

  <a class="btn-showcase-mode">
    <i class="btn-danger txt">{{__ "off"}}</i><div>{{__ "Edit Showcase"}}</div>
  </a>
{{/if}}

{{#if isForm}}
  {{#if isDashboardForm}}
    <a href="/dashboards/{{domain}}">
      <i class="fa fa-dashboard"></i>
      <div>Back to dashboard</div>
    </a>
  {{else}}
    <a href="/collections/{{_id}}">
      <i class="fa fa-object-group"></i>
      <div>Back to collection</div>
    </a>
  {{/if}}
{{else}}
  <a class="btn-open-admin footer-toggle-ctn">
    <i class="fa fa-cogs"></i><div>Admin stuff</div>
  </a>
{{/if}}

