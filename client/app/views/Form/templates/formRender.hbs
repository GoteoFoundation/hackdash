<h3>{{title}}</h3>

{{{markdown description}}}

  {{#if showErrors}}
    <div class="alert alert-danger" id="login-errors">
      {{showErrors}}
    </div>
  {{/if}}

  {{#if showMessages}}
    <div class="alert alert-success" id="login-messages">
      {{showMessages}}
    </div>
  {{/if}}

<div class="form-content">

  <div class="questions-list">
    <i class="fa fa-2x fa-spinner fa-pulse"></i>
  </div>

  {{#if isDummy}}
    <a class="btn btn-info send-form">Close demo</a>
  {{else}}
    <a class="btn btn-success send-form">Send</a>

    <div class="pull-right">
      <a class="btn btn-info" href="/forms">Go back to forms</a>
      <a class="btn btn-danger" href="/projects/{{project.id}}">Go back to project</a>
    </div>
  {{/if}}

</div>

<div class="done"></div>
