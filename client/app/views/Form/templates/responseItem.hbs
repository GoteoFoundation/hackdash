<div class="panel-heading" role="tab">
  <h4 class="panel-title">
    <a role="button"{{#if collapse}} data-toggle="collapse"{{/if}} href="#{{ itemId }}" data-bypass>
    {{#if project}}
      <span class="label label-default">ID: {{project.projectId}}</span>
      {{project.title}}
      -
      {{project.leader.name}}
      {{#if project.leader.email}}
        -
        {{project.leader.email}}
      {{/if}}
    {{else}}
    <span class="label label-default">{{user.username}}</span> {{user.name}} - {{user.email}}
    {{/if}}

    <span class="pull-right">{{percentLabel responded}}</span>
    </a></h4>
</div>

<div id="{{ itemId }}" class="{{#if collapse}}panel-collapse collapse{{/if}}" role="tabpanel">
  <dl>
  {{#each responses}}
    <dt><i class="fa fa-{{../fa question.type}} fa-fw"></i> {{ question.title }}</dt>
    <dd>{{ ../format this }}</dd>
  {{/each}}
  </dl>
</div>
