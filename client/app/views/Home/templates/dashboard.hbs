<div class="cover">
  {{#if title}}
  <i class="item-letter">{{firstLetter title}}</i>
  {{else}}
  <i class="item-letter">{{firstLetter domain}}</i>
  {{/if}}
</div>

<div class="details">
  <h2>{{title}}</h2>
  <h3>{{domain}}</h3>
  <div class="description">
    {{{markdown description}}}
  </div>
