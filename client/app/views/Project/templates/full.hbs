<div class="feature-new-design">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="row">
          <div class="col-md-offset-2 col-md-8 text-center">
            <div class="cover">
              {{#if cover}}
                <div class="item-cover" style="background-image: url({{cover}});"></div>
              {{else}}
                <i class="item-letter">{{firstLetter title}}</i>
              {{/if}}
            </div>
            <h1>{{title}}</h1>
            <hr class="section">
            <div class="description">
              {{{markdown description}}}
            </div>
            <div class="people">
              <h3>Integrantes</h3>
              <hr class="subsection">
              <ul class="integrantes">
                <li>
                  <a href="/users/{{leader._id}}">
                    {{getProfileImageRounded leader}}
                  </a>
                </li>

                {{#each contributors}}
                  <li>
                    <a href="/users/{{_id}}">
                      {{getProfileImageRounded .}}
                    </a>
                  </li>
                {{/each}}

                {{#each followers}}
                  <li>
                    <a href="/users/{{_id}}">
                      {{getProfileImageRounded .}}
                    </a>
                  </li>
                {{/each}}
              </ul>
            </div>
            <h3>Tecnologias</h3>
            <hr class="subsection">
            <ul class="tags">
              {{#each tags}}
              {{#if .}}
              <li>
                <a href="/projects?q={{.}}" data-bypass="true">{{.}}</a>
              </li>
              {{/if}}
              {{/each}}
            </ul>
            <h3>Redes Sociales</h3>
            <hr class="subsection">
          </div>
        </div>
        <a href="" class="join">Ask to join</a>
      </div>
    </div>
  </div>
</div>
<div class="header">
  <div class="container">
    <h1>{{title}}</h1>
    <h3 class="page-link-left">
      <a href="/dashboards/{{domain}}">{{domain}}</a>
    </h3>
  </div>
</div>

<div class="body">
  <div class="bg-body-entity"></div>
  <div class="container">

    <div class="col-md-4">

      <div class="cover">

        <div class="progress" title="{{status}}">
          <div class="{{status}}"></div>
          <div class="status">{{status}}</div>
        </div>

        {{#if cover}}
        <div class="item-cover"
          style="background-image: url({{cover}});"></div>
        {{else}}
        <i class="item-letter">{{firstLetter title}}</i>
        {{/if}}
      </div>

      <div class="people">

        <div class="clearfix">
          <h5>Managed by</h5>
          <a class="pull-left" href="/users/{{leader._id}}">
            {{getProfileImageHex leader}}
          </a>
        </div>

        <div class="clearfix">
          <h5>Contributors [{{contributors.length}}]</h5>
          {{#each contributors}}
          <a class="pull-left" href="/users/{{_id}}">
            {{getProfileImageHex .}}
          </a>
          {{/each}}
        </div>

        <div class="clearfix">
          <h5>Followers [{{followers.length}}]</h5>
          {{#each followers}}
          <a class="pull-left" href="/users/{{_id}}">
            {{getProfileImageHex .}}
          </a>
          {{/each}}
        </div>

      </div>

    </div>

    <div class="col-md-8">
      <div class="description">
        {{{markdown description}}}
      </div>
      <ul class="tags clearfix col-md-10">
        {{#each tags}}
        {{#if .}}
        <li>
          <a href="/projects?q={{.}}" data-bypass="true">{{.}}</a>
        </li>
        {{/if}}
        {{/each}}
      </ul>
      <div class="share-ctn clearfix col-md-2">
        <a class="share tooltips" data-original-title="Share this Project">
          <i class="fa fa-share-alt"></i>
        </a>
      </div>
    </div>

    <div class="col-md-12 buttons-panel">

    {{#if link}}
    <div class="pull-right">
      <a href="{{link}}" target="__blank" class="btn btn-default">demo</a>
    </div>
    {{/if}}

    {{#isLoggedIn}}

      {{#if isAdminOrLeader}}
      <div class="pull-right remove">
        <a class="btn btn-danger">Remove</a>
      </div>
      <div class="pull-right edit">
        <a class="btn btn-success" href="/projects/{{_id}}/edit">Edit</a>
      </div>
      {{/if}}

      {{#if showActions}}

      <div class="col-md-4 pull-left">

        <div class="pull-left contributor">
          {{#if contributing}}
          <a data-loading-text="leaving..." class="btn btn-default leave">Leave</a>
          {{else}}
          <a data-loading-text="joining..." class="btn btn-default join">Join</a>
          {{/if}}
        </div>
        <div class="pull-left follower">
          {{#if following}}
          <a data-loading-text="unfollowing..." class="btn btn-default unfollow">Unfollow</a>
          {{else}}
          <a data-loading-text="following..." class="btn btn-default follow">Follow</a>
          {{/if}}
        </div>

      </div>
      {{/if}}

    {{else}}

      <div class="col-md-4 pull-left">
        <a class="btn btn-default login">Follow</a>
        <a class="btn btn-default login">Join</a>
      </div>

    {{/isLoggedIn}}
    </div>

  </div>

  <div class="container disqus-ctn">
    <div id="disqus_thread" class="col-md-12"></div>
  </div>

</div>
