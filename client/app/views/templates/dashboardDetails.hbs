
{{#if isAdmin}}

  <h1>
    <a id="dashboard-title">{{title}}</a>
  </h1>

  <p class="lead dashboard-lead">
    <a id="dashboard-description">{{description}}</a>
  </p>

  <p class="dashboard-link">
    <a id="dashboard-link">{{link}}</a>
  </p>

{{else}}

  {{#if title}}
  <h1>
    {{title}}

    {{#if link}}
    <a class="dashboard-link" href="{{link}}" target="_blank">site</a>
    {{/if}}
  </h1>
  {{/if}}

  {{#if description}}
  <p class="lead">{{description}}</p>
  {{/if}}

{{/if}}
