<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal">
    <i class="fa fa-close"></i>
  </button>
  <h2 class="modal-title">New password</h2>
</div>

<div class="modal-body">
  <div class="row">

    {{#if showErrors}}
      <div class="alert alert-danger" id="login-errors">
        {{showErrors}}
      </div>
    {{/if}}

    {{#if showMessages}}
      <div class="alert alert-success" id="login-messages">
        {{showMessages}}
      </div>
    {{/if}}

    <div class="col-xs-12 col-md-8 col-md-offset-2">


      <form class="signup" method="post" action="/lost-password{{#if token}}/{{token}}{{/if}}">
        <div class="form-group">
          {{#if token}}
            <label for="password">Write your new password</label>
            <input type="password" class="form-control" id="password" name="password" placeholder="Super-secret">
          {{else}}
            <label for="email">Email address</label>
            <input type="email" class="form-control" id="email" name="email" placeholder="Em@il">
          {{/if}}
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
      </form>


    </div>
  </div>
</div>
