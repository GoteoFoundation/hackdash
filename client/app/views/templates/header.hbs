<div class="search-ctn"></div>

<div class="createProject pull-right btn-group">
  {{#isLoggedIn}}
  <a class="btn-profile" href="/users/profile">
    <img class="avatar tooltips" src="{{user "picture"}}?s=50" rel="tooltip" data-placement="bottom" data-original-title="Edit profile">
  </a>  
  <a class="btn logout" href="/logout">Logout</a>
  {{/isLoggedIn}}
</div>

<a class="logo" href="/"></a>

{{#isDashboardView}}
  <div class="dashboard-ctn"></div>

  {{#isLoggedIn}}

  {{#if open}}
  <a class="btn btn-large" href="/projects/create">New Project</a>
  {{/if}}

    {{#if isAdmin}}
    <div class="dashboard-switcher">
      <input type="checkbox" {{#if open}}checked{{/if}} data-size="small"
        data-on-color="success" data-off-color="danger">
    </div>

    <a class="btn export" href="/api/v2/csv">Export CSV</a>
    {{/if}}

  {{else}}
    
    {{#if open}}
    <a class="btn btn-large" href="/login">Login to create a project</a>
    {{/if}}

  {{/isLoggedIn}}
{{/isDashboardView}}