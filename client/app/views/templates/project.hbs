<div class="well">
  <div class="cover shadow"> 
    {{#if cover}}
    <img src="{{cover}}" alt="{{title}}"/>
    {{/if}}
  </div>
  <div class="well-content">
    <h3>{{title}} ({{domain}})</h3>
    <br/>
    {{description}}
  </div>
  <div class="row-fluid footer-box">
    <div class="aging activity created_at">
      <i rel="tooltip" title="{{timeAgo created_at}}" class="tooltips icon-time icon-1"></i>
    </div>
    <div class="activity people">
      {{followers.length}} 
      <a href="#"><i class="icon-heart"></i>
      </a>
    </div>

    <div class="pull-right edit">
      <a href="{{projectURL}}" class="btn btn-link">View</a>
    </div>

  </div>
</div>
