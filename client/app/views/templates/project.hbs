<div class="well">
  <div class="cover shadow"> 
    {{#if cover}}
    <img src="{{cover}}" alt="{{title}}"/>
    {{/if}}
  </div>
  <div class="well-content">
    <h4><a href="{{instanceURL}}">{{domain}}</a></h4>
    <h4>{{title}}</h4>
    <br/>
    {{{markdown description}}}
    {{#each contributors}}
      <img class="avatar tooltips" rel="tooltip" 
        src="{{picture}}" data-id="{{id}}" title="{{name}}">
    {{/each}}
  </div>
  <div class="row-fluid footer-box">
    <div class="aging activity created_at">
      <i rel="tooltip" title="{{timeAgo created_at}}" class="tooltips icon-time icon-1"></i>
    </div>
    <div class="activity people">
      {{followers.length}} 
      <a><i class="icon-heart"></i></a>
    </div>

    {{#if link}}
    <div class="pull-right edit">
      <a href="{{link}}" target="_blank" class="btn btn-link">Demo</a>
    </div>
    {{/if}}

    {{#if showActions}}
    <div class="pull-right contributor">
      {{#if contributing}}
      <a class="btn btn-link leave">Leave</a>
      {{else}}
      <a class="btn btn-link join">Join</a>
      {{/if}}
    </div>
    <div class="pull-right follower">
      {{#if following}}
      <a class="btn btn-link unfollow">Unfollow</a>
      {{else}}
      <a class="btn btn-link follow">Follow</a>
      {{/if}}
    </div>
    {{/if}}
  </div>
</div>
