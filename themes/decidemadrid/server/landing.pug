extends ../../../views/layout

block styles_default

  link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700')

  link(rel='stylesheet', href='/styles/vendor.css?v=' + version)

block styles

  link(rel='stylesheet', href='/styles/landing.css?v=' + version)

block content

block scripts

  script(src="/js/hackdashApp.js?v=" + version)

  script.
    $(function(){
      window.hackdash.startApp();
      $('div.about>a').on('click', function(e) {
        e.preventDefault();
        $('#about').css('display', 'block');
        setTimeout(function() {$('#about').addClass('active'); });
      })
      $('#about>button').on('click', function(e) {
        e.preventDefault();
        $('#about').removeClass('active');
        setTimeout(function() { $('#about').css('display', 'none'); }, 500);
      });
    });
